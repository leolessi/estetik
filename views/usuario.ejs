<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clínica Estetik</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div
      class="col-md-12 mt-4 mb-2 mb-md-auto d-flex flex-wrap align-items-center justify-content-center"
    >
      <a
        href="/home"
        class="d-inline-flex link-body-emphasis text-decoration-none"
      >
        <img
          src="/images/logo-removebg.png"
          alt=""
          style="height: 150px; padding: 0"
        />
      </a>
    </div>

    <div class="container">
      <header
        class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between pt-3 mb-4"
      >
        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <li>
            <a href="/usuario" class="nav-link px-2 links-inicio"
              >Olá, <%= user.nomeCompleto %></a
            >
          </li>
        </ul>

        <div class="col-md-2 text-end">
          <a href="/logout" class="btn btn-outline-secondary me-2 btn-logout"
            >Logout</a
          >
        </div>
      </header>
    </div>

    <% if (user.role === 'admin') { %>
    <div class="col-md-2 d-flex justify-content-center mx-auto">
      <a href="/" class="btn btn-primary w-100 mt-2 me-4 ms-4"
        >Área do Administrador</a
      >
    </div>
    <% } %>

    <!-- espaço para mostrar os dados do usuário -->

    <div class="container">
      <div class="container mt-4">
        <div class="usuarios-container">
          <div class="card shadow-sm mb-4 border border-2 custom-border">
            <div class="card-body">
              <div class="d-flex justify-content-center">
                <button
                  type="button"
                  class="btn btn-link p-0 mb-2"
                  onclick="toggleDetails(this, '<%= user._id %>')"
                >
                  Expandir
                </button>
              </div>

              <h2 class="card-title text-secondary">
                Nome completo:
                <span class="text-dark"><%= user.nomeCompleto %></span>
              </h2>

              <h3 class="text-secondary">
                Data de nascimento:
                <span class="text-dark"
                  ><% const data = new Date(user.dataNascimento); const dia =
                  String(data.getUTCDate()).padStart(2, '0'); const mes =
                  String(data.getUTCMonth() + 1).padStart(2, '0'); const ano =
                  data.getUTCFullYear(); %> <%= `${dia}/${mes}/${ano}` %></span
                >
              </h3>

              <h3 class="text-secondary">
                Celular:
                <span class="text-dark"><%= user.celular %></span>
              </h3>

              <h3 class="text-secondary">
                Email:
                <span class="text-dark"><%= user.email %></span>
              </h3>

              <div class="dadosExpansiveis">
                <div id="details-<%= user._id %>" class="d-none">
                  <h3 class="text-secondary">
                    Profissão:
                    <span class="text-dark"><%= user.profissao %></span>
                  </h3>

                  <h3 class="text-secondary">
                    Endereço:
                    <span class="text-dark"><%= user.endereco %></span>
                  </h3>

                  <h3 class="text-secondary">
                    Tem alergia a algum cosmético?
                    <span class="text-dark capitalize-first"
                      ><%= user.alergiaCosmetico %></span
                    >
                    <% if (user.alergiaCosmeticoTexto) { %>
                    <span class="text-dark"
                      >| <%= user.alergiaCosmeticoTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Tem alergia a algum medicamento?
                    <span class="text-dark capitalize-first"
                      ><%= user.alergiaMedicamento %></span
                    >
                    <% if (user.alergiaMedicamentoTexto) { %>
                    <span class="text-dark"
                      >| <%= user.alergiaMedicamentoTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Faz uso de algum medicamento? Qual frequência?
                    <span class="text-dark capitalize-first"
                      ><%= user.usoMedicamento %></span
                    >
                    <% if (user.usoMedicamentoTexto) { %>
                    <span class="text-dark"
                      >| <%= user.usoMedicamentoTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Tem algum problema cardíaco?
                    <span class="text-dark capitalize-first"
                      ><%= user.problemasCardiacos %></span
                    >
                    <% if (user.problemasCardiacosTexto) { %>
                    <span class="text-dark"
                      >| <%= user.problemasCardiacosTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Passou por alguma cirurgia recente?
                    <span class="text-dark capitalize-first"
                      ><%= user.cirurgiaRecente %></span
                    >
                    <% if (user.cirurgiaRecenteTexto) { %>
                    <span class="text-dark"
                      >| <%= user.cirurgiaRecenteTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Possui alguma condição auto imune?
                    <span class="text-dark capitalize-first"
                      ><%= user.condicaoAutoImune %></span
                    >
                    <% if (user.condicaoAutoImuneTexto) { %>
                    <span class="text-dark"
                      >| <%= user.condicaoAutoImuneTexto %></span
                    >
                    <% } %>
                  </h3>

                  <h3 class="text-secondary">
                    Costuma se estressar muito durante o dia?
                    <span class="text-dark capitalize-first"
                      ><%= user.estresse %></span
                    >
                  </h3>

                  <h3 class="text-secondary">
                    Tem feito alguma dieta com restrições alimentares?
                    <span class="text-dark capitalize-first"
                      ><%= user.dietaRestrita %></span
                    >
                  </h3>
                </div>
              </div>

              <form
                id="deleteForm-<%= user._id %>"
                action="/finishUser"
                method="post"
              >
                <input type="hidden" name="id" value="<%= user._id %>" />
                <div class="d-flex justify-content-center">
                  <a
                    href="/userUpdate/<%= user._id %>"
                    class="btn btn-success w-50 mt-2 me-4 ms-4"
                    >Atualizar dados</a
                  >
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="mt-4">
        <h3 class="text-secondary">Diário do Tratamento:</h3>
        <!-- Modal de edição do diário -->
        <div
          class="modal fade"
          id="editDiarioModal"
          tabindex="-1"
          aria-labelledby="editDiarioModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <form
              id="editDiarioForm"
              action="/usuario/diario/edit"
              method="POST"
              class="modal-content"
            >
              <div class="modal-header">
                <h5 class="modal-title" id="editDiarioModalLabel">Editar</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Fechar"
                ></button>
              </div>
              <div class="modal-body">
                <input type="hidden" name="userId" id="editUserId" />
                <input type="hidden" name="entryIndex" id="editEntryIndex" />
                <textarea
                  class="form-control mb-2"
                  name="texto"
                  id="editTexto"
                  rows="3"
                ></textarea>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                  Salvar edição
                </button>
              </div>
            </form>
          </div>
        </div>
        <div class="mb-3" style="max-height: 200px; overflow-y: auto">
          <% if (user.diarioTratamento && user.diarioTratamento.length > 0) { %>
          <% user.diarioTratamento.forEach(function(entry, idx) { %>
          <div class="border rounded p-2 mb-2 bg-light position-relative">
            <small class="text-muted">
              <%= new Date(entry.data).toLocaleDateString('pt-BR') %>
            </small>
            <p class="mb-0" id="texto-<%= idx %>"><%= entry.texto %></p>
            <div class="d-flex justify-content-end gap-2 mt-2">
              <form
                action="/usuario/diario/delete"
                method="POST"
                class="d-inline"
                style="margin: 0"
              >
                <input type="hidden" name="userId" value="<%= user._id %>" />
                <input type="hidden" name="entryIndex" value="<%= idx %>" />
                <button
                  type="submit"
                  class="btn btn-danger btn-sm"
                  title="Excluir"
                >
                  🗑️
                </button>
              </form>
              <button
                type="button"
                class="btn btn-warning btn-sm"
                title="Editar"
                onclick="editarEntrada('<%= idx %>', '<%= user._id %>')"
              >
                ✏️
              </button>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p class="text-muted">Nenhuma atualização registrada ainda.</p>
          <% } %>
        </div>
        <form action="/usuario/diario" method="POST">
          <input type="hidden" name="userId" value="<%= user._id %>" />
          <div class="mb-2">
            <textarea
              class="form-control"
              name="texto"
              rows="3"
              placeholder="Escreva aqui sua atualização..."
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-sm mb-2">
            Adicionar atualização
          </button>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.querySelectorAll(".capitalize-first").forEach((element) => {
        const text = element.textContent.trim();
        if (text) {
          element.textContent =
            text.charAt(0).toUpperCase() + text.slice(1).toLowerCase();
        }
      });

      function confirmDelete(userId) {
        const confirmation = confirm(
          "Você realmente deseja excluir esse usuário?"
        );
        if (confirmation) {
          document.getElementById(`deleteForm-${userId}`).submit();
        } else {
          window.location.reload();
        }
      }

      function toggleDetails(button, userId) {
        const details = document.getElementById(`details-${userId}`);

        if (details.classList.contains("d-none")) {
          details.classList.remove("d-none");
          button.textContent = "Recolher";
        } else {
          details.classList.add("d-none");
          button.textContent = "Expandir";
        }
      }

      function editarEntrada(idx, userId) {
        const texto = document.getElementById("texto-" + idx).innerText;
        document.getElementById("editUserId").value = userId;
        document.getElementById("editEntryIndex").value = idx;
        document.getElementById("editTexto").value = texto;
        // Abre o modal Bootstrap
        var modal = new bootstrap.Modal(
          document.getElementById("editDiarioModal")
        );
        modal.show();
      }
    </script>
  </body>
</html>
